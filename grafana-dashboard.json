{
  "title": "PowerBot - Power status",
  "uid": "powerbot-main",
  "schemaVersion": 38,
  "version": 1,
  "time": {
    "from": "now-7d",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "type": "stat",
      "title": "Current power status",
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 0 },
      "targets": [
        {
          "refId": "A",
          "expr": "power_status",
          "legendFormat": "{{status}}"
        }
      ],
      "options": {
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        },
        "orientation": "horizontal",
        "textMode": "value_and_name"
      }
    },
    {
      "id": 2,
      "type": "timeseries",
      "title": "Uptime ratio (24h & 7d)",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 4 },
      "targets": [
        {
          "refId": "A",
          "expr": "power_uptime_ratio{window=\"24h\"}",
          "legendFormat": "24h"
        },
        {
          "refId": "B",
          "expr": "power_uptime_ratio{window=\"7d\"}",
          "legendFormat": "7d"
        }
      ],
      "options": {
        "legend": { "showLegend": true },
        "tooltip": { "mode": "single" }
      }
    },
    {
      "id": 3,
      "type": "timeseries",
      "title": "Total power events",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 12 },
      "targets": [
        {
          "refId": "A",
          "expr": "power_events_total",
          "legendFormat": "events"
        }
      ],
      "options": {
        "legend": { "showLegend": false },
        "tooltip": { "mode": "single" }
      }
    }
  ],
  "annotations": {
    "list": []
  },
  "templating": {
    "list": []
  }
}
